/* Fonts */
@import url('https://fonts.googleapis.com/css?family=Poppins:300');

@font-face {
  font-family: 'Recoleta';
  src: url('./fonts/recoleta-regular.woff2') format('woff2'),
    url('./fonts/recoleta-regular.woff') format('woff');
}

/* Micro Reset */
*,
*:before,
*:after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-weight: normal;
}

body {
  min-height: 100vh;

  font-size: 20px;
  font-family: Poppins, system-ui, sans-serif;
}

ul,
ol {
  list-style: none;
}

img {
  width: 100%;
  height: auto;
}

.big-serif {
  max-width: 80%;

  font-family: Recoleta, serif;
  font-weight: 400;
  font-size: responsive 25px 55px;
  font-range: 375px 1600px;

  color: inherit;
}

main {
  height: 100vh;
}

.home-container {
  color: #fff;
  background: #0a0a0a;

  padding: 3vmax;
  height: 100vh;
}

nav {
  margin-top: 50px;
}

nav a {
  display: block;
  color: inherit;
  text-decoration: none;

  transition: transform 400ms;
}

nav a .date {
  color: #545454;

  font-family: Poppins;
}

header {
  padding: 3vmax 3vmax 124px 3vmax;
}

header > a > img {
  height: 24px;
  width: 24px;
}

.project-container {
  display: grid;
  grid-template-columns: minmax(auto, 1fr) minmax(auto, 60ch) minmax(auto, 1fr);

  padding: 3vmax;
  min-height: 100vh;
}

.project-container h1 {
  grid-column: 2;
  margin-bottom: 32px;
}

.project-container p {
  grid-column: 2;
  margin-bottom: 84px;
  line-height: 1.8;
  font-size: responsive 16px 20px; /* min-size, max-size */
  font-range: 375px 1600px; /* viewport widths between which */
}

.project-container img {
  grid-column: 1 / -1;
  margin-bottom: 3vmax;
}
